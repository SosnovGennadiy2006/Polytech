#minimizeButton, #maximizeButton, #closeButton, #changeModeButton
{
    border: none;
}

#minimizeButton QLabel, #maximizeButton QLabel, #closeButton QLabel, #changeModeButton QLabel
{
    border: none;
    background: rgba(0, 0, 0, 0);
}

#minimizeButton QLabel:hover, #maximizeButton QLabel:hover, #closeButton QLabel:hover, #changeModeButton QLabel:hover
{
    background: rgba(255, 255, 255, 60);
}

#closeButton QLabel:hover
{
    background: #e81123;
}

#titleBar
{
    background: #222;
}

#titleLabel
{
    color: #fff;
}

#welcomeLabel1, #welcomeLabel2
{
    color: #fff;
}

#welcomeWidget
{
    background: #222;
}

#colorButton
{
    border: none;
    border-radius: 5px;
    padding: 0px 20px 0px 20px;
}

#colorButton QLabel
{
    border: none;
    border-radius: 5px;
    background: #f48225;
    color: #fff;
}

#colorButton QLabel:hover
{
    background: #E58230;
}

#colorText
{
    color: #E58230;
}

#dataText
{
    color: #bbb;
}

#workArea
{
    background: #222;
}
